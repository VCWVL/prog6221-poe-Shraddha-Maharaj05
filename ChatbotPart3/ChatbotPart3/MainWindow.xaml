<Window x:Class="ChatbotPart3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberBot" Height="600" Width="800" ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Chat -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
        </Grid.RowDefinitions>

        <TextBlock Text="CyberBot Chat"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Grid.Row="0"/>
        
        <TextBox x:Name="ChatOutput"
         Grid.Row="1"
         FontSize="14"
         TextWrapping="Wrap"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto"
         AcceptsReturn="True"
         Background="White"
         BorderThickness="0"
         VerticalAlignment="Stretch"
         HorizontalAlignment="Stretch"/>


        <DockPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBox x:Name="UserInputBox" Height="30" Margin="0,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Left" Width="660"/>
            <Button Content="Send" Width="80" Height="30" Click="SendButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
